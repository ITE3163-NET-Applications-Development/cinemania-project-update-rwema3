@page
@model CineMania.Pages.Contact.ContactModel

@{
    ViewData["Title"] = "Contactus";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4 xmlns="http://www.w3.org/1999/html">Contact Page</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Contact.Name" class="control-label">Names</label>
                <input asp-for="Contact.Name" class="form-control"/>
                <span asp-validation-for="Contact.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Contact.Email" class="control-label">E-mail(Valid)</label>
                <input asp-for="Contact.Email" class="form-control"/>
                <span asp-validation-for="Contact.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                           <label asp-for="Contact.Subject" class="control-label">Subject</label>
                           <input asp-for="Contact.Subject" class="form-control"/>
                           <span asp-validation-for="Contact.Subject" class="text-danger"></span>
                       </div>
            
            <div class="form-group">
                <label asp-for="Contact.Message" class="control-label">Message</label>
                <textarea asp-for="Contact.Message" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Contact.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="submit" value="Contactus" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

